= form_for @town do |f|
  - if @town.errors.any?
    #error_explanation
      %h2= "#{pluralize(@town.errors.count, "error")} prohibited this town from being saved:"
      %ul
        - @town.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :postcode
    = f.text_field :postcode
  .field
    = f.label :country_id
    = f.select :country_id, options_for_select(countries, @town.country.try(:id)), include_blank: '-- select --'
  .actions
    = f.submit 'Save'
