= form_for @parish do |f|
  - if @parish.errors.any?
    #error_explanation
      %h2= "#{pluralize(@parish.errors.count, "error")} prohibited this parish from being saved:"
      %ul
        - @parish.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :town
    = f.text_field :town
  .field
    = f.label :diocese
    = f.text_field :diocese
  .actions
    = f.submit 'Save'
